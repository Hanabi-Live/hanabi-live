    </div>

    <div class="row">
      <div class="col-3 input-text">
        <div class="create-game-icon">
          <i class="fas fa-users"></i>
        </div>
        Visibility
      </div>
      <div class="col-4">
        <input id="replay-visibility-solo" type="radio" name="replay-visibility" checked />
        <label class="replay-radio" for="replay-visibility-solo">
          <span class="replay-radio-label">Solo</span>
        </label>
      </div>
      <div class="col-4">
        <input id="replay-visibility-shared" type="radio" name="replay-visibility" />
        <label class="replay-radio" for="replay-visibility-shared">
          <span class="replay-radio-label">Shared</span>
        </label>
      </div>
    </div>

    <div class="row">
      <div class="col-12">
        <button id="replay-submit" class="button fit" type="submit">
          <i class="fas fa-eye"></i>&nbsp;
          Watch
        </button>
      </div>
    </div>
  </div>

  <!-- Set Leader modal -->
  <div id="set-leader-modal" class="modal-prompt">
    <h2>Set New Leader</h2>

    <p>Who is the person that you want to pass the replay leader to?</p>

    <div id="leader-placeholder"></div>
  </div>

  <!-- Set Turn modal -->
  <div id="set-turn-modal" class="modal-prompt">
    <h2>Which turn do you want to go to?</h2>

    <div class="row">
      <div class="col-6">Turn:</div>
      <div class="col-6">
        <input id="set-turn-input" name="set-turn-input" type="number">
      </div>
    </div>

    <div class="row">
      <div class="col-2 off-5">
        <button id="set-turn-button" type="submit" class="button">Go</button>
      </div>
    </div>
  </div>

  <!-- Play / Discard modal -->
  <div id="play-discard-modal" class="modal-prompt">
    <h2 id="play-discard-title"></h2>

    <p id="play-discard-message"></p>

    <div class="row">
      <div class="col-6">
        Card:
      </div>
      <div class="col-6">
        <input id="play-discard-card" name="play-discard-card" type="number">
      </div>
    </div>

    <div class="row">
      <div class="col-2 off-5">
        <button id="play-discard-button" type="submit" class="button">Go</button>
      </div>
    </div>
  </div>

  <!-- Set Modifier modal -->
  <div id="set-modifier-modal" class="modal-prompt">
    <h2>Set Modifier</h2>

    <p>Enter a modifier for the "cards currently gotten". (e.g. "1", "-2", etc.)</p>

    <div class="row">
      <div class="col-6">
        Current modifier:
      </div>
      <div class="col-6">
        <span id="set-modifier-current"></span>
      </div>
    </div>

    <div class="row">
      <div class="col-6">
        New modifier:
      </div>
      <div class="col-6">
        <input id="set-modifier-new" name="set-modifier-new" type="number" value="0">
      </div>
    </div>

    <div class="row">
      <div class="col-2 off-5">
        <button id="set-modifier-button" type="submit" class="button">Go</button>
      </div>
    </div>
  </div>

  <!-- Morph modal -->
  <div id="morph-modal" class="modal-prompt">
    <h2>Morph</h2>

    <p>Select the card you want to morph it into:</p>

    <form name="morph-modal-form">
      <div id="morph-modal-suits"></div>
      <div id="morph-modal-ranks"></div>
      <div class="row">
        <div class="col-6 input-text">
          or type in the card (e.g. red 1, b3, ...)
        </div>
        <div class="row">
          <input type="text" id="morph-modal-textbox" name="morph-modal-textbox" value="" data-suit="" data-rank="">
        </div>
      </div>
    </form>

    <div class="row">
      <div class="col-2 off-3">
        <button id="morph-modal-button-ok" type="submit" class="button">Ok</button>
      </div>
      <div class="col-2 off-1">
        <button id="morph-modal-button-cancel" type="submit" class="button">Cancel</button>
      </div>
    </div>
  </div>
</div>

<!-- Game (the UI when playing a game) -->
<div id="game" class="hidden"></div>

<!-- Game tooltips (which are initialized in "tooltips.js") -->
<span id="game-tooltips"></span><!-- This span cannot be hidden -->

<!-- Game chat modal -->
<div id="game-chat-modal" class="hidden draggable">
  <div id="game-chat-modal-header">
    <a id="game-chat-modal-header-close">
      <i class="fas fa-times fa-xs"></i>
    </a>
  </div>
  <section id="game-chat-modal-white" class="box">
    <div id="game-chat-text" class="lobby-chat-text-box"></div>
    <input id="game-chat-input" type="text" placeholder="Chat" autocomplete="off" />
    <div id="game-chat-istyping" class="istyping"></div>
  </section>
</div>

<!-- Page cover (which fades the background when a modal is showing) -->
<div id="page-cover"></div>

<!-- Used to validate that we are connecting to the correct URL -->
<div id="domain" class="hidden">{{.Domain}}</div>

{{if eq .Title "Dev"}}
<!--
    In development, we use "webpack-dev-server" to serve the JavaScript on a separate port
    (this is necessary because it provides "hot reloading" and speeds up long compilation times)
-->
<script
  type="text/javascript"
  src="http://{{.Domain}}:{{.WebpackPort}}/main.{{.Version}}.min.js"
></script>
{{else if .Compiling}}
<!-- The server is currently in the process of compiling the TypeScript -->
<script type="text/javascript" src="/public/js/lib/jquery-3.5.0.min.js"></script>
<script type="text/javascript" src="/public/js/compiling.js"></script>
{{else}}
<!-- All of the JavaScript is bundled into one file with webpack -->
<script type="text/javascript" src="/public/js/bundles/main.{{.Version}}.min.js"></script>
{{end}}
{{end}}
